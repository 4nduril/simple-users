{
    "rules": {
        "indent": [
            2,
            "tab",
			{"SwitchCase": 1}
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
		"eqeqeq": 2,
		"curly": 2,
		"strict": 2,
		"array-bracket-spacing": [
			2,
			"never"
		],
		"block-spacing": [
			2,
			"always"
		]
    },
    "env": {
        "node": true,
        "browser": true,
		"mocha": true,
		"es6": true
    },
	"parserOptions": {
		"ecmaVersion": "2017",
		"sourceType": "module"
	},
    "extends": "eslint:recommended"
}
